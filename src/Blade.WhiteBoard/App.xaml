<Application x:Class="Plainion.WhiteBoard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml" Activated="Application_Activated">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Shared.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ToolBar.xaml"/>
                <ResourceDictionary Source="Resources/Styles/GroupBox.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Expander.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ScrollBar.xaml"/>

                <ResourceDictionary Source="Resources/Stencils/SpecialStencils.xaml"/>
                <ResourceDictionary Source="Resources/Stencils/CommonStencils.xaml"/>

                <ResourceDictionary Source="Designer/Connections.xaml"/>
                <ResourceDictionary Source="Designer/DesignerItem.xaml"/>
                
                <ResourceDictionary Source="Toolbox/Resources.xaml"/>

                <ResourceDictionary Source="ApplicationToolbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
